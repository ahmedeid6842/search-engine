<div class="container">

    <div class="row justify-content-center mt-6">
        <div class="col-md-8 ">
            <div class="d-flex flex-row justify-content-between mt-4 align-items-start">
                <h1>Real-Time Search</h1>
                <div class="mt-2">
                    <%= link_to 'Create Article' , new_article_path, class: "btn btn-primary" %>
                        <%= link_to 'Logout' , destroy_user_session_path, data: { turbo_method: :delete },
                            class: "btn btn-outline-danger" %>
                </div>
            </div>
            <form class="d-flex mt-4" id="search-form">
                <input class="form-control me-2" type="search" placeholder="Search articles..." id="search-input">
                <button class="btn btn-outline-success me-2" type="submit" id="search-button">Search</button>
                <%= link_to 'Analytics' , '/analytics' , class: "btn btn-primary" %>
            </form>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 mt-4">
            <ul id="search-results" class="list-group border-0">
            </ul>
        </div>
    </div>

</div>

<% if recommended_articles.length> 0 %>
    <div class="container mt-4">
        <h2>Recommended Articles</h2>
        <div class="row">
            <% recommended_articles.each do |article| %>
                <div class="col-md-4">
                    <div class="card mb-4" style="height:14rem;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <%= article.title %>
                            </h5>
                            <p class="card-text flex-grow-1">
                                <%= article.content.slice(0, 100) %>
                                    <% if article.content.length> 100 %>
                                        ...
                                        <% end %>
                            </p>
                            <p class="card-text text-muted small mt-auto">Author: <%= article.author.name %>
                            </p>
                            <div class="mt-auto">
                                <%= link_to 'Read More',article_path(article) , class: "btn btn-primary" %>
                            </div>
                        </div>
                    </div>
                </div>
                <% end %>
        </div>
    </div>
    <%end%>
        <%= javascript_include_tag 'search' %>