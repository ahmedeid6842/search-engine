<div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card border-0 shadow">
          <div class="card-body">
            <h2 class="card-title"><%= @article.title %></h2>
            <p class="card-text"><%= @article.content %></p>
            <div class="text-muted mb-3">
              <small>Published <%= time_ago_in_words(@article.created_at) %> ago</small>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <span class="badge bg-primary"><%= @article.searched_hits %> Hits</span>
                <span class="badge bg-secondary"><%= @article.author.name %></span>
              </div>
              <div>
                <%= link_to 'Back to Home',  '/', class: 'btn btn-secondary' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>